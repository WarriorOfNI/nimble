{
    "name": "build-site",
    "version": "1.0.0",
    "private": true,
    "description": "A meta package used for creating GitHub pages site contents",
    "scripts": {
        "build": "npm run clean && npm run copy-root && npm run copy-storybook && npm run copy-angular-example-to-storybook && npm run copy-vanilla-example-to-storybook",
        "pack": "npm pack",
        "clean": "rimraf dist && mkdirp dist",
        "copy-root": "cd root && copyfiles -E -a \"*\" ../dist",
        "copy-storybook": "cd ../../packages/nimble-components/dist && copyfiles -E \"storybook/**\" ../../../build/build-site/dist",
        "copy-angular-example-to-storybook": "cd ../../angular-workspace/dist && copyfiles -E \"example-client-app/**\" ../../build/build-site/dist/storybook",
        "copy-vanilla-example-to-storybook": "cd ../../examples/example-vanilla-app/dist && copyfiles -E \"./**\" ../../../build/build-site/dist/storybook/example-vanilla-app"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "mkdirp": "^1.0.4",
        "rimraf": "^3.0.2"
    },
    "files": [
        "dist",
        "!*.tgz"
    ]
}
